{
  "compilerOptions": {
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "paths": {
      "@/*": ["*"],
      "@src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules"],
  "include": ["scripts/**/*.ts", "src/**/*.ts"]
}
